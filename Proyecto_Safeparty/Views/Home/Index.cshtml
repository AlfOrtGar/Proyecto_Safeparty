@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
        <meta http-equiv="Expires" content="0">
        <meta http-equiv="Last-Modified" content="0">
        <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
        <meta http-equiv="Pragma" content="no-cache">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Página de Registro</title>
    <!-- Hojas de estilos -->
    <link rel="stylesheet" href="~/css/site.css"/> <!-- común -->
    <link rel="stylesheet" href="~/css/index.css" /> <!-- específico -->
    <link rel="icon" href="~/lib/favicon_io/favicon-32x32.png" type="image/x-icon">
    
</head>
<body>
    <div class="container-fluid">
        <div class="row"> 
            <div class="col-md-6">
                <h2 class="titulo"> Bienvenido a Safeparty<b>"@ViewData["Nombre"]"</b></h2>
                <a id="botonEspecial" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Mapa">Buscar en el mapa</a>
                <div id="separaciones">
                <h3 class="subtituloA" id="unoIndex"> Encárgate de</h3>
                <h2 class="subtituloB" id="dosIndex"> disfrutar,</h2>
                <h3 class="subtituloA" id="tresIndex"> nosotros hacemos el</h3>
                <h2 class="subtituloB" id="cuatroIndex"> resto. </h2>
                </div>
            </div>
            <div class="col-md-6">
                <div id="ofertaSemanal">
                    <h3 class="subtituloC"> ¡Oferta de la semana! </h3>
                    <img src="~/lib/pictures/oferta-semana.jpg"/> 
                    <h3 class="subtituloD"> Los Punsetes + Menta en La Riviera</h3>
                    <h2 class="titulo"> ¡por solo 18€!</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="circulo" id="uno"></div>
    <div class="circulo" id="dos"></div>
    <div class="circulo" id="tres"></div>
    <div class="circulo" id="cuatro"></div>
    <div class="circulo" id="cinco"></div>
    <div class="circulo" id="seis"></div>
    <div class="circulo" id="siete"></div>
    <div class="circulo" id="ocho"></div>

</body>
</html>

